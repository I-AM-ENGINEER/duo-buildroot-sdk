/dts-v1/;
#include "cv180x_base_riscv.dtsi"
#include "cv180x_asic_qfn.dtsi"
#include "cv180x_asic_sd.dtsi"
#include "cv180x_default_memmap.dtsi"

&mipi_rx{
	snsr-reset = <&portc 8 GPIO_ACTIVE_LOW>, <&portc 8 GPIO_ACTIVE_LOW>, <&portc 8 GPIO_ACTIVE_LOW>;
};

&spi2 {
	status = "okay";
        cs-gpios = <&porta 18 0>;

        spidev@0 {
                status = "disabled";
        };

        ili9488: ili9488@0{
                compatible = "ilitek,ili9488";
                reg = <0>;
                status = "okay";
                spi-max-frequency = <40000000>;
                spi-cpol;
                spi-cpha;
                rotate = <90>; //This depends on your screen
                fps = <60>;
                rgb;
                buswidth = <8>;
                dc-gpios = <&porta 24 GPIO_ACTIVE_HIGH>;
                reset-gpios = <&porta 23 GPIO_ACTIVE_LOW>;
                debug = <0x4000000>;
        };
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&i2c1 {
       status = "okay";
       clock-frequency = <100000>;
};

/ {
	model = "Milk-V Duo";
};

